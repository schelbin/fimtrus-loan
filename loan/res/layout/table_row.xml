<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical"
    android:paddingLeft="1dip"
    android:paddingRight="1dip"
    android:paddingTop="1dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_no"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/no"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textview_replayments"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/replayments"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textview_principal"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/principal"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textview_interest"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/interest"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textview_total_principal"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/total_principal"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/textview_remaining_amount"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dip"
            android:text="@string/remaining_amount"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>